mixin blogpost(title, img, text)
    .blogpost
        img(src= img, alt="post image")
        .blogpost-text
            h3= title
            .separator
            p= text

mixin social-media-link(logo, link)
    .social-media-link
        a(href=`${link}`)
            i(class=`${logo}`)

mixin footer-social-media-link(logo, link)
    .footer-social-media-link
        a(href=`${link}`)
            i(class=`${logo}`)

mixin section(title)
    section
        .section-header= title
        block


